@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
}

@{
    var birthdate = Model.Birthdate == null ? "----------------" : Model.Birthdate.Value.ToShortDateString();
}

<h2>Customer Details</h2>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Membership Type</th>
            <th>Birthdate</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
            <td>@Model.MembershipType.Name</td>
            <td>@birthdate</td>
        </tr>
    </tbody>
</table>

@Html.ActionLink("Return to List", "Index", null, new { @class = "btn btn-primary" })
